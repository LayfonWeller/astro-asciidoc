---
import { getCollection, render, type CollectionEntry } from 'astro:content';
import Default from '../../layouts/Main.astro';

interface Props {
  post: CollectionEntry<'blog_no_layout'>;
}

// 1. Generate a new path for every collection entry
export async function getStaticPaths() {
  const posts = await getCollection('blog_no_layout');
  return posts.map((post: CollectionEntry<'blog_no_layout'>) => ({
    params: { id: post.id },
    props: { post },
  }));
}
// 2. For your template, you can get the entry directly from the prop
const { post } = Astro.props;

const { Content, headings, remarkPluginFrontmatter } = await render(post);

const headings2 = await headings || [];

// console.log('remarkPluginFrontmatter:', remarkPluginFrontmatter);
// console.log('headings:', headings);
// console.log('post:', post);
---

<Default title={remarkPluginFrontmatter.title} headings={headings2} frontmatter={remarkPluginFrontmatter}>
  <h1>{post.data.title}</h1>
  <p>written by {remarkPluginFrontmatter.asciidoc.author}</p>
  <Content />
  <p>File: {post.filePath}</p>
</Default>
